{% extends 'base.twig' %}
{% block content %}
    {% if flash.info %}
        <div class="alert alert-success">{{ flash.info }}</div>
    {% endif %}
    <h1>Articles</h1>
    <table class="table">
        <thead><tr><th>Date</th><th>Title</th><th></th></tr></thead>
        <tbody>
        {% if articles|length == 0 %}
            <tr><td>There are no articles</td></tr>
        {% endif %}
        {% for article in articles %}
            <tr><td style="width: 1px;white-space: nowrap;">{{ article.date }}</td><td>{{ article.title }}</td><td style="text-align: right"><a href="admin/edit/{{ article.id }}" class="btn btn-primary btn-xs">Edit article</a> </td></tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="admin/new/" class="btn btn-primary">Add new article</a>
{% endblock %}